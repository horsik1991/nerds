.gallery
  background-color: #eee;
  padding-top:15px;
  padding-bottom:56px;
  &__subTitle
    font: 37px/37px $font-type;
    margin: 0
    margin-top: 30px
    letter-spacing: -0.5px;
  &__description
    margin-top: 15px;
    font: 16px/23px $font-type;
  &__list
    display: grid;
    grid-template-columns 380px auto 350px
    gap-column:20px;
  &__button
    display: inline-block;
    padding: 12px 70px;
    font-size: 12px;
    font-weight: bold;
    text-align: center;
    margin-top: 11px;
  &__radio
    align-self:flex-end;
    position: relative;
    bottom: 33px;
    left: 15px;
    display: flex
    & > label
      display: block;
      position: relative
      cursor: pointer
      &:not(:first-of-type)
        margin-left: 5px;
    & > input + label::before
      content:""
      width: 5px;
      border: 4px solid #fff;
      height: 5px;
      display: inline-block;
      position: relative;
      left: 9px;
      top: 1px;
      border-radius: 50%;
      background-color: #fff;
    & > input:checked + label::before
      transition: background-color ease 0.5s
      background-color: #c1c1c1

